{
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "max-classes-per-file": [
            true,
            1
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration"
        ],
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "no-default-export": true,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "only-arrow-functions": true,
        "no-consecutive-blank-lines": false,
        "no-console": false
    },
    "rulesDirectory": []
}