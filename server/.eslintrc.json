{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "parseOptions": "./tsconfig.json"
    },
    "rules": {
        "object-curly-spacing": "off",
        "indent": "off",
        "max-len": "off",
        "require-jsdoc": "off",
        "eqeqeq": "warn",
        "curly": "warn",
        "sort-keys": "warn",
        "arrow-parens": "error",
        "eol-last": "error"
    }
}